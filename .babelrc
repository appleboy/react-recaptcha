{
  "presets": ["es2015", "stage-0", "react"],
  "plugins": [
    "add-module-exports"
  ],
  "env": {
    "development": {
      "plugins": [
        ["react-transform", {
          "transforms": [{
            "transform": "react-transform-hmr",
            "imports": ["react"],
            "locals": ["module"]
          }, {
            "transform": "react-transform-catch-errors",
            "imports": ["react", "redbox-react"]
          }]
        }]
      ]
    },
    "test": {},
    "production": {
      "plugins": [
        "transform-react-remove-prop-types"
      ]
    }
  }
}
